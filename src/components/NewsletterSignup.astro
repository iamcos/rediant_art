---
export interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  successMessage?: string;
  backgroundImage?: string;
  lang?: string;
}

const {
  title = "Join Our Community",
  description = "Get exclusive access to new collections, behind-the-scenes content, and special offers. Be the first to know about our latest artistic creations.",
  buttonText = "Join Telegram",
  successMessage = "Thank you for joining! You'll receive updates via Telegram.",
  backgroundImage,
  lang = "en"
} = Astro.props;
---

<section 
  class="rediant-newsletter"
  style={backgroundImage ? `background-image: url('${backgroundImage}')` : undefined}
>
  <div class="rediant-newsletter-content">
    <div class="rediant-newsletter-container">
      <div class="rediant-newsletter-text">
        <h2 class="rediant-newsletter-title">{title}</h2>
        <p class="rediant-newsletter-description">{description}</p>
      </div>
      
      <div class="rediant-newsletter-form">
        <a 
          href="https://t.me/mizyre" 
          target="_blank"
          rel="noopener noreferrer"
          class="rediant-newsletter-button"
        >
          {buttonText}
        </a>
        <p class="rediant-newsletter-description-small">
          Join our Telegram channel for exclusive updates and behind-the-scenes content.
        </p>
      </div>
    </div>
  </div>
</section>


<style>
  .rediant-newsletter {
    padding: 5rem 0;
    position: relative;
    background: linear-gradient(135deg, var(--color-charcoal) 0%, #1a1a1a 100%);
    color: white;
  }

  .rediant-newsletter[style*="background-image"] {
    background-size: contain; /* show full image */
    background-position: center center;
    background-repeat: no-repeat;
    background-color: #111;
    background-attachment: fixed;
  }

  .rediant-newsletter[style*="background-image"]::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    z-index: 1;
  }

  .rediant-newsletter-content {
    position: relative;
    z-index: 2;
  }

  .rediant-newsletter-container {
    max-width: 60rem;
    margin: 0 auto;
    padding: 0 1rem;
    text-align: center;
  }

  .rediant-newsletter-text {
    margin-bottom: 3rem;
  }

  .rediant-newsletter-title {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    font-family: 'Playfair Display', serif;
    color: var(--color-gold);
  }

  .rediant-newsletter-description {
    font-size: 1.25rem;
    line-height: 1.6;
    color: #d1d5db;
    max-width: 48rem;
    margin: 0 auto;
  }

  .rediant-newsletter-form {
    max-width: 32rem;
    margin: 0 auto;
    text-align: center;
  }

  .rediant-newsletter-button {
    display: inline-block;
    padding: 1rem 2rem;
    background: var(--color-gold);
    color: white;
    text-decoration: none;
    border-radius: 0.5rem;
    font-weight: 600;
    transition: background-color 0.3s ease;
    white-space: nowrap;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .rediant-newsletter-button:hover {
    background: #b8941f;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .rediant-newsletter-description-small {
    margin-top: 1rem;
    color: #d1d5db;
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .rediant-newsletter {
      padding: 3rem 0;
    }

    .rediant-newsletter-title {
      font-size: 2.5rem;
    }

    .rediant-newsletter-description {
      font-size: 1.125rem;
    }

    .rediant-newsletter-button {
      width: 100%;
      text-align: center;
    }

    .rediant-newsletter[style*="background-image"] {
      background-attachment: scroll;
    }
  }
</style>
