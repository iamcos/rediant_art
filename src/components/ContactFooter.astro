---
export interface Props {
  title?: string;
  description?: string;
  phone?: string;
  address?: string;
  socialLinks?: {
    instagram?: string;
    telegram?: string;
  };
  lang?: string;
}

const {
  title = "Get in Touch",
  description = "Ready to start your artistic journey?",
  phone = "+7 901 315-75-53",
  address = "Creative Studio, Art District",
  socialLinks = {
    instagram: "https://instagram.com/mizyre",
    telegram: "https://t.me/mizyre",
  },
  lang = "en",
} = Astro.props;
---

<footer class="bg-black text-white pt-20 pb-10">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-16">
      <div class="col-span-1 md:col-span-2 space-y-6">
        <h2 class="text-3xl font-serif">Rediant Art</h2>
        <p class="text-gray-400 font-light max-w-sm">
          Contemporary artistic jewelry where ancient tribal inspiration meets
          modern 3D printing innovation.
        </p>
      </div>

      <div class="space-y-6">
        <h3 class="text-sm uppercase tracking-widest text-gold">{title}</h3>
        <ul class="space-y-4 text-gray-300 font-light">
          <li>
            <a href={`tel:${phone}`} class="hover:text-white transition-colors"
              >{phone}</a
            >
          </li>
          <li>{address}</li>
          <li>
            <a
              href="mailto:hello@rediant.art"
              class="hover:text-white transition-colors">hello@rediant.art</a
            >
          </li>
        </ul>
      </div>

      <div class="space-y-6">
        <h3 class="text-sm uppercase tracking-widest text-gold">Follow Us</h3>
        <ul class="space-y-4 text-gray-300 font-light">
          {
            socialLinks.instagram && (
              <li>
                <a
                  href={socialLinks.instagram}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-white transition-colors"
                >
                  Instagram
                </a>
              </li>
            )
          }
          {
            socialLinks.telegram && (
              <li>
                <a
                  href={socialLinks.telegram}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-white transition-colors"
                >
                  Telegram
                </a>
              </li>
            )
          }
        </ul>
      </div>
    </div>

    <div
      class="border-t border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center text-sm text-gray-500 font-light"
    >
      <p>&copy; {new Date().getFullYear()} Rediant Art. All rights reserved.</p>
      <div class="flex gap-6 mt-4 md:mt-0">
        <a href="#" class="hover:text-white transition-colors">Privacy Policy</a
        >
        <a href="#" class="hover:text-white transition-colors"
          >Terms of Service</a
        >
      </div>
    </div>
  </div>
</footer>
