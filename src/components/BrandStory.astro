---
export interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  founderName?: string;
  founderTitle?: string;
  founderImage?: string;
  backgroundImage?: string;
  lang?: string;
}

const {
  title = "Our Story",
  subtitle = "Ancient Wisdom Meets Modern Innovation",
  description = "Founded on the belief that jewelry should be more than adornmentâ€”it should be a form of self-expression and artistic statement. Rediant Art bridges the gap between ancient tribal traditions and cutting-edge 3D printing technology, creating pieces that honor the past while embracing the future.",
  founderName = "Svetlana",
  founderTitle = "Founder & Creative Director",
  founderImage = "/images/photo_2025-09-10 23.56.36.jpg",
  backgroundImage,
  lang = "en",
} = Astro.props;
---

<section class="py-24 bg-white text-black text-center relative overflow-hidden">
  <div class="container mx-auto px-6 relative z-10">
    <div class="max-w-3xl mx-auto space-y-12">
      <div class="space-y-4">
        <h2 class="text-4xl md:text-5xl font-serif">{title}</h2>
        <h3
          class="text-xl md:text-2xl font-light text-gray-500 font-serif italic"
        >
          {subtitle}
        </h3>
      </div>

      <p class="text-lg md:text-xl leading-relaxed font-light text-gray-700">
        {description}
      </p>

      <div class="flex flex-col items-center justify-center space-y-4 pt-8">
        <div
          class="w-24 h-24 rounded-full overflow-hidden grayscale hover:grayscale-0 transition-all duration-700"
        >
          <img
            src={founderImage}
            alt={founderName}
            loading="lazy"
            class="w-full h-full object-cover"
          />
        </div>
        <div class="text-center">
          <h4 class="text-lg font-serif">{founderName}</h4>
          <p class="text-sm uppercase tracking-widest text-gray-400">
            {founderTitle}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
