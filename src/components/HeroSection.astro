---
export interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  backgroundImage: string;
  backgroundAlt?: string;
  ctaPrimary?: {
    text: string;
    href: string;
  };
  ctaSecondary?: {
    text: string;
    href: string;
  };
  lang?: string;
}

const {
  title,
  subtitle,
  description,
  backgroundImage,
  backgroundAlt = "Hero background",
  ctaPrimary,
  ctaSecondary,
  lang = "en"
} = Astro.props;
---

<section 
  class="rediant-hero-section"
  style={`background-image: url('${backgroundImage}')`}
>
  <div class="rediant-hero-content">
    <div class="rediant-hero-container">
      <h1 class="rediant-hero-title">
        {title}
      </h1>
      {subtitle && (
        <p class="rediant-hero-subtitle">
          {subtitle}
        </p>
      )}
      {description && (
        <p class="rediant-hero-description">
          {description}
        </p>
      )}
      {(ctaPrimary || ctaSecondary) && (
        <div class="rediant-hero-actions">
          {ctaPrimary && (
            <a href={ctaPrimary.href} class="rediant-btn rediant-btn-primary">
              {ctaPrimary.text}
            </a>
          )}
          {ctaSecondary && (
            <a href={ctaSecondary.href} class="rediant-btn rediant-btn-secondary">
              {ctaSecondary.text}
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .rediant-hero-section {
    position: relative;
    min-height: 100vh;
    background-size: contain; /* show full image */
    background-position: center center;
    background-repeat: no-repeat;
    background-color: #111;
    background-attachment: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .rediant-hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 1;
  }

  .rediant-hero-content {
    position: relative;
    z-index: 2;
    color: white;
    text-align: center;
    padding: 0 1rem;
  }

  .rediant-hero-container {
    max-width: 4xl;
    margin: 0 auto;
  }

  .rediant-hero-title {
    font-size: 4rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    animation: fadeInUp 0.6s ease-out;
  }

  .rediant-hero-subtitle {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    color: #f5f5f5;
    animation: fadeInUp 0.6s ease-out 0.2s both;
  }

  .rediant-hero-description {
    font-size: 1.125rem;
    margin-bottom: 3rem;
    color: #e5e5e5;
    max-width: 48rem;
    margin-left: auto;
    margin-right: auto;
    animation: fadeInUp 0.6s ease-out 0.4s both;
  }

  .rediant-hero-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    animation: fadeInUp 0.6s ease-out 0.6s both;
  }

  .rediant-btn {
    display: inline-block;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .rediant-btn-primary {
    background: var(--color-gold);
    color: white;
  }

  .rediant-btn-primary:hover {
    background: var(--color-charcoal);
    transform: translateY(-2px);
  }

  .rediant-btn-secondary {
    border: 2px solid white;
    color: white;
  }

  .rediant-btn-secondary:hover {
    background: white;
    color: var(--color-charcoal);
  transform: translateY(-2px);
  }

  @media (min-width: 640px) {
    .rediant-hero-title {
      font-size: 6rem;
    }
    
    .rediant-hero-subtitle {
      font-size: 2rem;
    }
    
    .rediant-hero-description {
      font-size: 1.25rem;
    }
    
    .rediant-hero-actions {
      flex-direction: row;
    }
  }

  @media (min-width: 1024px) {
    .rediant-hero-title {
      font-size: 7rem;
    }
    
    .rediant-hero-subtitle {
      font-size: 3rem;
    }
    
    .rediant-hero-description {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .rediant-hero-section {
      background-attachment: scroll;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

