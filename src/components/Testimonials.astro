---
export interface Testimonial {
  id: string;
  text: string;
  author: string;
  role?: string;
  avatar?: string;
  rating?: number;
}

export interface Props {
  title?: string;
  description?: string;
  testimonials?: Testimonial[];
  lang?: string;
}

const {
  title = "What Our Community Says",
  description = "Discover how our jewelry transforms the way people express themselves.",
  testimonials = [
    {
      id: "1",
      text: "This bodychain turned my outfit into art! The craftsmanship is incredible and it's become my signature piece.",
      author: "Maria K.",
      role: "Fashion Enthusiast",
      rating: 5
    },
    {
      id: "2", 
      text: "The facechain is absolutely stunning. I've never felt more connected to my artistic side. It's like wearing a piece of history.",
      author: "Alex R.",
      role: "Artist",
      rating: 5
    },
    {
      id: "3",
      text: "Rediant's jewelry is more than accessories—they're conversation starters. Every piece tells a story.",
      author: "Sofia M.",
      role: "Designer",
      rating: 5
    }
  ],
  lang = "en"
} = Astro.props;
---

<section class="py-24 bg-warm-neutral text-black">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16 space-y-4">
      <h2 class="text-4xl font-serif">{title}</h2>
      <p class="text-lg text-gray-500 font-light max-w-2xl mx-auto">{description}</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      {testimonials.map((testimonial) => (
        <div class="text-center space-y-6">
          <div class="text-gold text-sm tracking-widest uppercase">
            {Array.from({ length: testimonial.rating || 5 }, () => '★').join('')}
          </div>
          <blockquote class="text-xl font-serif italic text-gray-800 leading-relaxed">
            "{testimonial.text}"
          </blockquote>
          
          <div class="flex flex-col items-center gap-2">
            {testimonial.avatar && (
              <div class="w-12 h-12 rounded-full overflow-hidden grayscale">
                <img 
                  src={testimonial.avatar} 
                  alt={testimonial.author}
                  loading="lazy"
                  class="w-full h-full object-cover"
                />
              </div>
            )}
            <div>
              <h4 class="font-medium text-sm uppercase tracking-wider">{testimonial.author}</h4>
              {testimonial.role && (
                <p class="text-xs text-gray-400 mt-1">{testimonial.role}</p>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
