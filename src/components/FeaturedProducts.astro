---
import ProductCard from './ProductCard.astro';
import { fetchProducts } from '../utils';

export interface Props {
  limit?: number;
  columns?: 2 | 3 | 4;
  title?: string;
  description?: string;
  showViewAll?: boolean;
  viewAllHref?: string;
}

const {
  limit = 4,
  columns = 4,
  title = "Featured Collection",
  description = "Discover our most popular pieces, each crafted with precision and artistic vision.",
  showViewAll = true,
  viewAllHref = "/shop"
} = Astro.props;

// Fetch products server-side
const allProducts = await fetchProducts();
const featuredProducts = allProducts.slice(0, limit);
---

<section class="rediant-featured-products">
  <div class="rediant-featured-container">
    <div class="rediant-featured-header">
      <h2 class="rediant-featured-title">{title}</h2>
      <p class="rediant-featured-description">{description}</p>
    </div>
    
    {featuredProducts.length > 0 ? (
      <div class="rediant-featured-grid" data-columns={columns}>
        {featuredProducts.map((product) => (
          <ProductCard product={product} />
        ))}
      </div>
    ) : (
      <div class="rediant-featured-empty">
        <h3 class="rediant-featured-empty-title">Collection Coming Soon</h3>
        <p class="rediant-featured-empty-description">
          We're preparing something extraordinary. Stay tuned for our exclusive jewelry collection.
        </p>
        <a href="/contact" class="rediant-featured-empty-action">
          Get Notified
        </a>
      </div>
    )}
    
    {showViewAll && featuredProducts.length > 0 && (
      <div class="rediant-featured-footer">
        <a href={viewAllHref} class="rediant-featured-view-all">
          View All Products
        </a>
      </div>
    )}
  </div>
</section>

<style>
  .rediant-featured-products {
    padding: 5rem 0;
    background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  }

  .rediant-featured-container {
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .rediant-featured-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .rediant-featured-title {
    font-size: 3rem;
    font-weight: bold;
    color: var(--color-charcoal);
    margin-bottom: 1.5rem;
    font-family: 'Playfair Display', serif;
  }

  .rediant-featured-description {
    font-size: 1.25rem;
    color: #666;
    max-width: 48rem;
    margin: 0 auto;
    line-height: 1.6;
  }

  .rediant-featured-grid {
    display: grid;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .rediant-featured-grid[data-columns="2"] {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }

  .rediant-featured-grid[data-columns="3"] {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }

  .rediant-featured-grid[data-columns="4"] {
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  }

  .rediant-featured-footer {
    text-align: center;
  }

  .rediant-featured-view-all {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: var(--color-gold);
    color: white;
    text-decoration: none;
    border-radius: 0.5rem;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid var(--color-gold);
  }

  .rediant-featured-view-all:hover {
    background: var(--color-charcoal);
    border-color: var(--color-charcoal);
    transform: translateY(-2px);
  }

  .rediant-featured-empty {
    text-align: center;
    padding: 4rem 2rem;
    background: white;
    border-radius: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .rediant-featured-empty-title {
    font-size: 2rem;
    font-weight: bold;
    color: var(--color-charcoal);
    margin-bottom: 1rem;
  }

  .rediant-featured-empty-description {
    font-size: 1.125rem;
    color: #666;
    margin-bottom: 2rem;
    max-width: 32rem;
    margin-left: auto;
    margin-right: auto;
  }

  .rediant-featured-empty-action {
    display: inline-block;
    padding: 0.875rem 2rem;
    background: var(--color-charcoal);
    color: white;
    text-decoration: none;
    border-radius: 0.5rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .rediant-featured-empty-action:hover {
    background: var(--color-gold);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .rediant-featured-products {
      padding: 3rem 0;
    }

    .rediant-featured-title {
      font-size: 2.5rem;
    }

    .rediant-featured-description {
      font-size: 1.125rem;
    }

    .rediant-featured-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
