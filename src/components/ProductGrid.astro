---
import ProductCard from './ProductCard.astro';

export interface Props {
  products: Array<{
    id: string;
    name: string;
    description: string;
    price: number;
    currency: string;
    image: string;
    category: string;
    tags: string[];
    available: boolean;
    stock?: number;
    link?: string;
  }>;
  columns?: 2 | 3 | 4;
  showEmpty?: boolean;
  emptyMessage?: string;
  emptyAction?: {
    text: string;
    href: string;
  };
}

const {
  products,
  columns = 3,
  showEmpty = true,
  emptyMessage = "No products available",
  emptyAction
} = Astro.props;
---

{products.length > 0 ? (
  <div class="rediant-product-grid" data-columns={columns}>
    {products.map((product) => (
      <ProductCard product={product} />
    ))}
  </div>
) : showEmpty ? (
  <div class="rediant-empty-state">
    <h3 class="rediant-empty-title">{emptyMessage}</h3>
    {emptyAction && (
      <a href={emptyAction.href} class="rediant-empty-action">
        {emptyAction.text}
      </a>
    )}
  </div>
) : null}

<style>
  .rediant-product-grid {
    display: grid;
    gap: 2rem;
    margin-top: 2rem;
  }

  .rediant-product-grid[data-columns="2"] {
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  }

  .rediant-product-grid[data-columns="3"] {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }

  .rediant-product-grid[data-columns="4"] {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }

  .rediant-empty-state {
    text-align: center;
    padding: 5rem 2rem;
  }

  .rediant-empty-title {
    font-size: 1.5rem;
    font-weight: bold;
    color: #2c2c2c;
    margin-bottom: 1rem;
  }

  .rediant-empty-action {
    display: inline-block;
    background: var(--color-gold);
    color: white;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .rediant-empty-action:hover {
    background: var(--color-charcoal);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .rediant-product-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
