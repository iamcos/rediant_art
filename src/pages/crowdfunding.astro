                  <span class="font-semibold">{product.price?.toFixed(2) || '0.00'} {product.currency?.toUpperCase() || 'EUR'}</span>
                </div>
                {product.starsAmountEnabled && (
                  <div class="flex justify-between">
                    <span>Stars:</span>
                    <span class="font-semibold">{product.starsAmount}</span>
                  </div>
                )}
                <div class="flex justify-between">
                  <span>Type:</span>
                  <span class="font-semibold">Digital Support</span>
                </div>
              </div>
              
              <p class="text-sm text-neutral-200 mb-6">
                Support our innovation with this digital contribution. 
                Help us build the future of artistic jewelry.
              </p>
              
              <a href={product.link} target="_blank" class="block w-full bg-white text-[var(--color-charcoal)] text-center py-3 rounded-lg font-semibold hover:bg-neutral-100 transition-colors">
                Support Now
              </a>
            </div>
          ))}
        </div>
      ) : (
