---
import Layout from '../layouts/Layout.astro';
import { fetchProducts } from '../utils/index';

// Fetch products from Tribute API
let products = [];
try {
  products = await fetchProducts();
} catch (error) {
  console.error('Failed to fetch products:', error);
  products = [];
}

// For crowdfunding, we'll use digital products as "support tiers" and physical as "rewards"
const supportTiers = products.filter(p => p.type === 'digital');
const rewards = products.filter(p => p.type === 'physical');

// Calculate totals
const totalSupport = supportTiers.reduce((sum, p) => sum + (p.price || 0), 0);
const totalRewards = rewards.reduce((sum, p) => sum + (p.price || 0), 0);
---

<Layout 
  title="Crowdfunding - Support Rediant Art Innovation"
  description="Support Rediant Art's innovation through donations, help us reach our goals, and join our community through memberships. Be part of the future of artistic jewelry."
  lang="en"
  heroImage="/images/photo_2025-09-11 00.03.32.jpeg"
  heroAlt="Crowdfunding for Rediant Art"
>
  <!-- Hero Section -->
  <section 
    class="bg-image-section min-h-screen flex items-center justify-center"
    style="background-image: url('/images/photo_2025-09-11 00.03.32.jpeg')"
  >
    <div class="bg-image-content text-center px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl sm:text-6xl lg:text-7xl font-bold mb-6 fade-in-up">
          Support Rediant Art
        </h1>
        <p class="text-xl sm:text-2xl lg:text-3xl mb-8 text-neutral-100 fade-in-up">
          Help Us Build the Future of Artistic Jewelry
        </p>
        <p class="text-lg sm:text-xl mb-12 text-neutral-200 max-w-3xl mx-auto fade-in-up">
          Join our community-driven innovation through support tiers and rewards. 
          Be part of building the most engaged artistic jewelry community worldwide.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center fade-in-up">
          <a href="#support" class="bg-[var(--color-gold)] text-white px-8 py-4 rounded-lg font-semibold hover:bg-[var(--color-charcoal)] transition-colors">
            Support Options
          </a>
          <a href="#rewards" class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-[var(--color-charcoal)] transition-colors">
            View Rewards
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Support Tiers (Digital Products as Donation Levels) -->
  <section id="support" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl sm:text-5xl font-bold text-neutral-900 mb-6">
          Support Tiers
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto">
          Choose your level of support and help us build the future of artistic jewelry.
        </p>
      </div>

      {supportTiers.length > 0 ? (
        <div class="grid lg:grid-cols-3 gap-8 mb-16">
          {supportTiers.map((tier, index) => (
            <div class="bg-gradient-to-br from-[var(--color-gold)] to-[var(--color-charcoal)] rounded-lg p-8 text-white">
              <div class="text-center mb-6">
                <div class="text-4xl mb-4">üíé</div>
                <h3 class="text-2xl font-bold mb-2">{tier.name}</h3>
                <p class="text-neutral-200">{tier.description}</p>
              </div>

              <div class="space-y-4 mb-6">
                <div class="flex justify-between">
                  <span>Support Level:</span>
                  <span class="font-semibold">{tier.price?.toFixed(2) || '0.00'} {tier.currency?.toUpperCase() || 'EUR'}</span>
                </div>
                {tier.starsAmountEnabled && (
                  <div class="flex justify-between">
                    <span>Stars:</span>
                    <span class="font-semibold">{tier.starsAmount}</span>
                  </div>
                )}
                <div class="flex justify-between">
                  <span>Type:</span>
                  <span class="font-semibold">Digital Support</span>
                </div>
              </div>

              <p class="text-sm text-neutral-200 mb-6">
                Support our innovation with this digital contribution. 
                Help us build the future of artistic jewelry.
              </p>

              <a href={tier.link} target="_blank" class="block w-full bg-white text-[var(--color-charcoal)] text-center py-3 rounded-lg font-semibold hover:bg-neutral-100 transition-colors">
                Support Now
              </a>
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-xl text-neutral-600">No support tiers available at the moment.</p>
        </div>
      )}

      <!-- Physical Rewards -->
      <div class="text-center mb-16">
        <h2 class="text-4xl sm:text-5xl font-bold text-neutral-900 mb-6">
          Physical Rewards
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto">
          Beautiful handcrafted jewelry pieces as rewards for your support.
        </p>
      </div>

      {rewards.length > 0 ? (
        <div class="grid lg:grid-cols-2 gap-8">
          {rewards.map((reward, index) => (
            <div class="bg-gradient-to-br from-[var(--color-charcoal)] to-[var(--color-gold)] rounded-lg p-8 text-white">
              <div class="text-center mb-6">
                <div class="text-4xl mb-4">üéÅ</div>
                <h3 class="text-2xl font-bold mb-2">{reward.name}</h3>
                <p class="text-neutral-200">{reward.description}</p>
              </div>

              <div class="space-y-4 mb-6">
                <div class="flex justify-between">
                  <span>Reward Value:</span>
                  <span class="font-semibold">{reward.price?.toFixed(2) || '0.00'} {reward.currency?.toUpperCase() || 'EUR'}</span>
                </div>
                <div class="flex justify-between">
                  <span>Type:</span>
                  <span class="font-semibold">Physical Reward</span>
                </div>
              </div>

              <p class="text-sm text-neutral-200 mb-6">
                Receive this unique jewelry piece as a thank you for your support.
              </p>

              <a href={reward.link} target="_blank" class="block w-full bg-white text-[var(--color-charcoal)] text-center py-3 rounded-lg font-semibold hover:bg-neutral-100 transition-colors">
                Get Reward
              </a>
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-xl text-neutral-600">No physical rewards available at the moment.</p>
        </div>
      )}
    </div>
  </section>

  <!-- Community Impact -->
  <section class="py-20 bg-neutral-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl sm:text-5xl font-bold mb-6">
        Community Impact
      </h2>
      <p class="text-xl text-neutral-300 max-w-3xl mx-auto mb-12">
        Your support directly contributes to our growth and innovation.
      </p>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-neutral-800 rounded-lg p-8">
          <div class="text-5xl mb-4">üåü</div>
          <h3 class="text-2xl font-bold mb-2">Total Support</h3>
          <p class="text-xl text-[var(--color-gold)]">{(totalSupport + totalRewards).toFixed(2)} EUR</p>
          <p class="text-neutral-400">Overall value of support tiers and rewards.</p>
        </div>
        <div class="bg-neutral-800 rounded-lg p-8">
          <div class="text-5xl mb-4">üéÅ</div>
          <h3 class="text-2xl font-bold mb-2">Physical Rewards</h3>
          <p class="text-xl text-[var(--color-gold)]">{rewards.length}</p>
          <p class="text-neutral-400">Number of physical rewards available.</p>
        </div>
        <div class="bg-neutral-800 rounded-lg p-8">
          <div class="text-5xl mb-4">üíé</div>
          <h3 class="text-2xl font-bold mb-2">Support Tiers</h3>
          <p class="text-xl text-[var(--color-gold)]">{supportTiers.length}</p>
          <p class="text-neutral-400">Number of support tiers available.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl sm:text-5xl font-bold text-neutral-900 mb-6">
        Ready to Support?
      </h2>
      <p class="text-xl text-neutral-600 max-w-3xl mx-auto mb-12">
        Your contribution helps us continue creating unique artistic jewelry and growing our community.
      </p>
      <a href="#support" class="bg-[var(--color-gold)] text-white px-8 py-4 rounded-lg font-semibold hover:bg-[var(--color-charcoal)] transition-colors">
        Start Supporting
      </a>
    </div>
  </section>
</Layout>