---
import Layout from '../layouts/Layout.astro';
import { fetchProducts } from '../utils/index';

// Fetch real data from Tribute API
let products = [];
let digitalProducts = [];
let physicalProducts = [];

try {
  products = await fetchProducts();
  digitalProducts = products.filter(p => p.type === 'digital');
  physicalProducts = products.filter(p => p.type === 'physical');
} catch (error) {
  console.error('Failed to fetch products:', error);
  // Fallback to empty arrays if API fails
  products = [];
  digitalProducts = [];
  physicalProducts = [];
}

// Calculate totals for display
const totalDigitalValue = digitalProducts.reduce((sum, p) => sum + (p.price || 0), 0);
const totalPhysicalValue = physicalProducts.reduce((sum, p) => sum + (p.price || 0), 0);
---

<Layout 
  title="Crypto Crowdfunding - Support Rediant Art Innovation"
  description="Join Rediant's crypto crowdfunding campaigns and support the future of artistic jewelry. Contribute to our innovation through digital support and physical rewards."
  lang="en"
  heroImage="/images/photo_2025-09-11 00.03.32.jpeg"
  heroAlt="Crypto crowdfunding for Rediant Art"
>
  <!-- Hero Section -->
  <section 
    class="bg-image-section min-h-screen flex items-center justify-center"
    style="background-image: url('/images/photo_2025-09-11 00.03.32.jpeg')"
  >
