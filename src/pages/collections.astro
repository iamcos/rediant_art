---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import ProductCard from '../components/ProductCard.astro';

const photos = await getCollection('photos');
const portraitPhotos = photos.filter(photo => photo.data.category === 'portrait').slice(0, 8);
const lifestylePhotos = photos.filter(photo => photo.data.category === 'lifestyle').slice(0, 6);

// Fetch available products
let products = [];
try {
  const response = await fetch(`${import.meta.env.SITE || 'https://rediant-art2.vercel.app'}/api/products`);
  if (response.ok) {
    products = await response.json();
  }
} catch (error) {
  console.error('Failed to fetch products:', error);
  // Fallback to sample data
  products = [
    {
      id: 'sample-1',
      name: 'Golden Facechain',
      description: 'Elegant golden facechain inspired by ancient tribal designs',
      price: 89,
      currency: 'USD',
      image: '/images/photo_2025-09-10 23.58.23.jpeg',
      category: 'facechain',
      tags: ['gold', 'facechain', 'tribal'],
      available: true,
      stock: 5
    },
    {
      id: 'sample-2',
      name: 'Silver Headchain',
      description: 'Modern silver headchain with geometric patterns',
      price: 75,
      currency: 'USD',
      image: '/images/photo_2025-09-10 23.58.18.jpeg',
      category: 'headchain',
      tags: ['silver', 'headchain', 'geometric'],
      available: true,
      stock: 3
    }
  ];
}
---

<Layout 
  title="Collections - Rediant Art"
  description="Explore our four distinct jewelry collections: Facechains, Headchains, Bodychains, and Earrings. Each piece tells a story of ancient wisdom meeting modern innovation."
  lang="en"
>
  <!-- Hero Section -->
  <section 
    class="bg-image-section min-h-screen flex items-center justify-center"
    style="background-image: url('/images/photo_2025-09-10 23.58.23.jpeg')"
  >
    <div class="bg-image-content text-center px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl sm:text-6xl lg:text-7xl font-bold mb-6 fade-in-up">
          Our Collections
        </h1>
        <p class="text-xl sm:text-2xl lg:text-3xl mb-8 text-neutral-100 fade-in-up">
          Four distinct lines of jewelry, each with its own story
        </p>
        <p class="text-lg sm:text-xl mb-12 text-neutral-200 max-w-3xl mx-auto fade-in-up">
          From the signature facechains to flowing bodychains, each piece transforms your presence into living art.
        </p>
      </div>
    </div>
  </section>

  <!-- Available Products Section -->
  {products.length > 0 && (
    <section class="py-20 bg-neutral-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl sm:text-5xl font-bold text-neutral-900 mb-6">
            Currently Available
          </h2>
          <p class="text-xl text-neutral-600 max-w-3xl mx-auto mb-8">
            Discover our latest pieces, each one a unique expression of ancient wisdom and modern artistry.
          </p>
          <div class="bg-gradient-to-r from-[var(--color-gold)] to-[var(--color-charcoal)] h-1 w-24 mx-auto"></div>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {products.map((product: any) => (
            <ProductCard product={product} />
          ))}
        </div>
        
        <div class="text-center mt-12">
          <a 
            href="/contact" 
            class="bg-[var(--color-gold)] text-white px-8 py-4 rounded-lg font-semibold hover:bg-[var(--color-charcoal)] transition-colors inline-block"
          >
            Custom Order Available
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Facechains Collection -->
  <section id="facechains" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl sm:text-5xl font-bold text-neutral-900 mb-6">
          Facechains — The Signature
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto mb-8">
          The facechain is the heart of Rediant. Inspired by tribal face markings and sacred symmetry, 
          it transforms the bridge of the nose into a canvas.
        </p>
        <div class="bg-gradient-to-r from-[var(--color-gold)] to-[var(--color-charcoal)] h-1 w-24 mx-auto"></div>
      </div>
      
      <div class="grid md:grid-cols-2 gap-12 items-center mb-20">
        <div>
          <h3 class="text-2xl font-bold text-neutral-900 mb-6">Design Language</h3>
          <ul class="space-y-4 text-neutral-600">
            <li class="flex items-start">
              <span class="text-[var(--color-gold)] mr-3">•</span>
              <span>Delicate nosepiece sits gracefully, curving like ancient tribal ornaments</span>
            </li>
            <li class="flex items-start">
              <span class="text-[var(--color-gold)] mr-3">•</span>
              <span>Fine chains extend outward, meeting at the ears with symmetrical precision</span>
            </li>
            <li class="flex items-start">
              <span class="text-[var(--color-gold)] mr-3">•</span>
              <span>Subtle details: feathers, geometric patterns, floral silhouettes, crystal drops</span>
            </li>
            <li class="flex items-start">
              <span class="text-[var(--color-gold)] mr-3">•</span>
              <span>Demand attention, draw eyes, provoke conversations</span>
            </li>
          </ul>
        </div>
        <div class="photo-gallery grid grid-cols-2 gap-4">
          {portraitPhotos.slice(0, 4).map((photo) => (
            <div class="photo-item">
              <img 
                src={`/images/${photo.data.filename}`} 
                alt={photo.data.alt}
                class="w-full h-64 object-cover rounded-lg"
              />
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Headchains Collection -->
  <section 
    id="headchains" 
    class="bg-image-section py-20"
    style="background-image: url('/images/photo_2025-09-10 23.58.15.jpeg')"
  >
    <div class="bg-image-content">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl sm:text-5xl font-bold mb-6">
            Headchains — The Crown Reimagined
          </h2>
          <p class="text-xl text-neutral-200 max-w-3xl mx-auto mb-8">
            The headchain is a modern crown. Resting on the forehead and hair, 
            it recalls ancient adornments once worn by rulers, shamans, and mystics.
          </p>
          <div class="bg-gradient-to-r from-[var(--color-gold)] to-transparent h-1 w-24 mx-auto"></div>
        </div>
        
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="photo-gallery grid grid-cols-2 gap-4">
            {portraitPhotos.slice(4, 8).map((photo) => (
              <div class="photo-item">
                <img 
                  src={`/images/${photo.data.filename}`} 
                  alt={photo.data.alt}
                  class="w-full h-64 object-cover rounded-lg"
                />
              </div>
            ))}
          </div>
          <div>
            <h3 class="text-2xl font-bold text-white mb-6">Features</h3>
            <ul class="space-y-4 text-neutral-200">
              <li class="flex items-start">
                <span class="text-[var(--color-gold)] mr-3">•</span>
                <span>Light, flowing, and radiant with minimal modern lines</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--color-gold)] mr-3">•</span>
                <span>Feathers, half-moons, or sacred geometry may hang lightly from chains</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--color-gold)] mr-3">•</span>
                <span>Creates movement with every step</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--color-gold)] mr-3">•</span>
                <span>Designed to awaken your inner sovereign — subtle, powerful, and magnetic</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Bodychains Collection -->
  <section id="bodychains" class="py-20 bg-neutral-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl sm:text-5xl font-bold text-neutral-900 mb-6">
          Bodychains — Flowing Geometry
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto mb-8">
          The bodychain traces the contours of the body, outlining form with elegant symmetry. 
          Worn over clothing or against skin, they bring a sense of ritual and strength.
        </p>
        <div class="bg-gradient-to-r from-[var(--color-gold)] to-[var(--color-charcoal)] h-1 w-24 mx-auto"></div>
      </div>
      
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h3 class="text-2xl font-bold text-neutral-900 mb-6">Design Elements</h3>
          <ul class="space-y-4 text-neutral-600">
            <li class="flex items-start">
              <span class="text-[var(--color-gold)] mr-3">•</span>
              <span>Chains: Fine and adjustable, creating layers across the torso, waist, or back</span>
            </li>
            <li class="flex items-start">
              <span class="text-[var(--color-gold)] mr-3">•</span>
              <span>Anchors: Designed to sit comfortably on shoulders, hips, or neckline</span>
            </li>
            <li class="flex items-start">
              <span class="text-[var(--color-gold)] mr-3">•</span>
              <span>Ornaments: Sacred geometry pendants, feather motifs, or minimal metallic elements</span>
            </li>
            <li class="flex items-start">
              <span class="text-[var(--color-gold)] mr-3">•</span>
              <span>Materials: Stainless steel, brass, or silver-plated chain — durable, light, and skin-friendly</span>
            </li>
          </ul>
        </div>
        <div class="photo-gallery grid grid-cols-2 gap-4">
          {lifestylePhotos.slice(0, 4).map((photo) => (
            <div class="photo-item">
              <img 
                src={`/images/${photo.data.filename}`} 
                alt={photo.data.alt}
                class="w-full h-64 object-cover rounded-lg"
              />
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Earrings Collection -->
  <section 
    id="earrings" 
    class="bg-image-section py-20"
    style="background-image: url('/images/photo_2025-09-11 00.03.49.jpeg')"
  >
    <div class="bg-image-content">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl sm:text-5xl font-bold mb-6">
            Earrings — A Dialogue of Details
          </h2>
          <p class="text-xl text-neutral-200 max-w-3xl mx-auto mb-8">
            Earrings at Rediant are never static. They are made by combining metal parts from diverse sources, 
            each shaped like a story: half-moons, leaves, feathers, suns, or faces.
          </p>
          <div class="bg-gradient-to-r from-[var(--color-gold)] to-transparent h-1 w-24 mx-auto"></div>
        </div>
        
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="photo-gallery grid grid-cols-2 gap-4">
            {lifestylePhotos.slice(2, 6).map((photo) => (
              <div class="photo-item">
                <img 
                  src={`/images/${photo.data.filename}`} 
                  alt={photo.data.alt}
                  class="w-full h-64 object-cover rounded-lg"
                />
              </div>
            ))}
          </div>
          <div>
            <h3 class="text-2xl font-bold text-white mb-6">Characteristics</h3>
            <ul class="space-y-4 text-neutral-200">
              <li class="flex items-start">
                <span class="text-[var(--color-gold)] mr-3">•</span>
                <span>Asymmetrically balanced, playful yet elegant</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--color-gold)] mr-3">•</span>
                <span>Complement the larger chains — or stand alone as delicate sparks of personality</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--color-gold)] mr-3">•</span>
                <span>Each pair is a reminder that details matter</span>
              </li>
              <li class="flex items-start">
                <span class="text-[var(--color-gold)] mr-3">•</span>
                <span>Complete the dialogue between self-expression and presence</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-20 bg-neutral-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl sm:text-5xl font-bold mb-6">
        Ready to Transform Your Presence?
      </h2>
      <p class="text-xl text-neutral-300 max-w-3xl mx-auto mb-12">
        Each Rediant piece shares a unifying thread: born from ancient inspiration, 
        crafted through modern artistry, made to attract connection.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-[var(--color-gold)] text-white px-8 py-4 rounded-lg font-semibold hover:bg-[var(--color-charcoal)] transition-colors">
          Start Your Journey
        </a>
        <a href="/3d-printing" class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-[var(--color-charcoal)] transition-colors">
          Learn About Our Technology
        </a>
      </div>
    </div>
  </section>
</Layout>





