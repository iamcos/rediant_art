import Layout from '../../layouts/Layout.astro';
import { fetchProducts } from '../../utils/index';

// Fetch products from Tribute API
let products = [];
try {
  products = await fetchProducts();
} catch (error) {
  console.error('Failed to fetch products:', error);
  products = [];
}

// For crowdfunding, we'll use digital products as "support tiers" and physical as "rewards"
const supportTiers = products.filter(p => p.type === 'digital');
const rewards = products.filter(p => p.type === 'physical');

// Calculate totals
const totalSupport = supportTiers.reduce((sum, p) => sum + (p.price || 0), 0);
const totalRewards = rewards.reduce((sum, p) => sum + (p.price || 0), 0);
