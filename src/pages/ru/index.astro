---
import Layout from '../../layouts/Layout.astro';
import HeroSection from '../../components/HeroSection.astro';
import PhotoGallery from '../../components/PhotoGallery.astro';
import FeaturedProducts from '../../components/FeaturedProducts.astro';
import BrandStory from '../../components/BrandStory.astro';
import Testimonials from '../../components/Testimonials.astro';
import NewsletterSignup from '../../components/NewsletterSignup.astro';
import ContactFooter from '../../components/ContactFooter.astro';
import CallToAction from '../../components/CallToAction.astro';
import { getCollection } from 'astro:content';

// Get featured photos for the gallery
const photos = await getCollection('photos');
const featuredPhotos = photos.filter(photo => photo.data.featured).slice(0, 12);
const heroPhoto = photos.find(photo => photo.data.category === 'portrait' && photo.data.featured);
---

<Layout 
  title="Rediant Art - Современные украшения и художественные инновации"
  description="Откройте для себя коллекцию художественных украшений Rediant, включающую цепочки для лица, головы, тела и серьги. Где древние племенные традиции встречаются с современным мастерством."
  lang="ru"
  heroImage={heroPhoto ? `/images/${heroPhoto.data.filename}` : undefined}
  heroAlt={heroPhoto?.data.alt}
>
  <!-- Hero Section -->
  <HeroSection
    title="Rediant Art"
    subtitle="Современные украшения и художественные инновации"
    description="Где древние племенные традиции встречаются с современным мастерством. Откройте для себя цепочки для лица, головы, тела и серьги, которые превращают ваше присутствие в живое искусство."
    backgroundImage={heroPhoto ? `/images/${heroPhoto.data.filename}` : '/images/photo_2025-09-10 23.56.36.jpg'}
    backgroundAlt={heroPhoto?.data.alt}
    ctaPrimary={{
      text: "Магазин",
      href: "/ru/shop"
    }}
    ctaSecondary={{
      text: "Наша история",
      href: "/ru/about"
    }}
    lang="ru"
  />

  <!-- Featured Products Section -->
  <FeaturedProducts 
    title="Избранная коллекция"
    description="Откройте для себя наши самые популярные изделия, каждое из которых создано с точностью и художественным видением."
    limit={4}
    columns={4}
    showViewAll={true}
    viewAllHref="/ru/shop"
  />

  <!-- Photo Gallery Section -->
  <section class="py-20 bg-neutral-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl sm:text-5xl font-bold text-neutral-900 mb-6">
          Искусство в движении
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto">
          Каждое изделие рассказывает историю древней мудрости, встречающейся с современными инновациями. 
          Наши украшения превращают тело в холст для самовыражения.
          </p>
        </div>
        
      <PhotoGallery 
        featured={true}
        limit={12}
        columns={3}
        showOverlay={true}
      />
    </div>
  </section>

  <!-- Brand Story Section -->
  <BrandStory 
    title="Наша история"
    subtitle="Древняя мудрость встречается с современными инновациями"
    description="Основанная на убеждении, что украшения должны быть больше, чем просто украшения — они должны быть формой самовыражения и художественного высказывания. Rediant Art соединяет древние племенные традиции с передовыми технологиями 3D-печати, создавая изделия, которые чтут прошлое, принимая будущее."
    founderName="Светлана"
    founderTitle="Основатель и креативный директор"
    founderImage="/images/photo_2025-09-10 23.56.36.jpg"
    backgroundImage="/images/photo_2025-09-10 23.58.23.jpeg"
    lang="ru"
  />

  <!-- Testimonials Section -->
  <Testimonials 
    title="Что говорит наше сообщество"
    description="Узнайте, как наши украшения меняют способ самовыражения людей."
    testimonials={[
      {
        id: "1",
        text: "Эта цепочка для тела превратила мой наряд в произведение искусства! Качество изготовления невероятное, и она стала моей визитной карточкой.",
        author: "Мария К.",
        role: "Любитель моды",
        rating: 5
      },
      {
        id: "2", 
        text: "Цепочка для лица просто потрясающая. Я никогда не чувствовала себя так связанной со своей художественной стороной. Это как носить кусочек истории.",
        author: "Алекс Р.",
        role: "Художник",
        rating: 5
      },
      {
        id: "3",
        text: "Украшения Rediant — это больше, чем аксессуары, они завязывают разговоры. Каждое изделие рассказывает историю.",
        author: "София М.",
        role: "Дизайнер",
        rating: 5
      }
    ]}
    lang="ru"
  />

  <!-- Newsletter Signup Section -->
  <NewsletterSignup 
    title="Присоединяйтесь к нашему сообществу"
    description="Получите эксклюзивный доступ к новым коллекциям, закулисному контенту и специальным предложениям. Будьте первыми, кто узнает о наших последних художественных творениях."
    buttonText="Присоединиться к Telegram"
    lang="ru"
  />

  <!-- Contact Footer Section -->
  <ContactFooter 
    title="Свяжитесь с нами"
    description="Готовы начать свое художественное путешествие? Мы будем рады услышать от вас."
    phone="+1 (555) 123-4567"
    address="Творческая студия, Арт-район"
    socialLinks={{
      instagram: "https://instagram.com/mizyre",
      telegram: "https://t.me/mizyre"
    }}
    lang="ru"
  />
</Layout>