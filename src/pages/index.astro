---
import Layout from "../layouts/Layout.astro";
import HeroSection from "../components/HeroSection.astro";
import PhotoGallery from "../components/PhotoGallery.astro";
import BrandStory from "../components/BrandStory.astro";
import Testimonials from "../components/Testimonials.astro";
import NewsletterSignup from "../components/NewsletterSignup.astro";
import ContactFooter from "../components/ContactFooter.astro";
import { getCollection } from "astro:content";

// Get featured photos for the gallery
const photos = await getCollection("photos");
const featuredPhotos = photos
  .filter((photo) => photo.data.featured)
  .slice(0, 12);
const heroPhoto = photos.find(
  (photo) => photo.data.category === "portrait" && photo.data.featured,
);
---

<Layout
  title="Rediant Art - Contemporary Jewelry & Artistic Innovation"
  description="Discover Rediant's artistic jewelry collection featuring facechains, headchains, bodychains, and earrings."
  lang="en"
  heroImage={heroPhoto ? `/images/${heroPhoto.data.filename}` : undefined}
  heroAlt={heroPhoto?.data.alt}
>
  <!-- Hero Section -->
  <HeroSection
    title="Rediant Art"
    subtitle="Contemporary Jewelry"
    description="Where ancient tribal inspiration meets modern craftsmanship. Pieces that transform your presence into living art."
    backgroundImage={heroPhoto
      ? `/images/${heroPhoto.data.filename}`
      : "/images/photo_2025-09-10 23.56.36.jpg"}
    backgroundAlt={heroPhoto?.data.alt}
    ctaSecondary={{
      text: "Explore",
      href: "/shop",
    }}
    lang="en"
  />

  <!-- Photo Gallery Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16 space-y-4">
        <h2 class="text-4xl font-serif">Art in Motion</h2>
        <p class="text-lg text-gray-500 font-light max-w-2xl mx-auto">
          Each piece tells a story of ancient wisdom meeting modern innovation.
        </p>
      </div>

      <PhotoGallery featured={true} limit={12} columns={3} showOverlay={true} />
    </div>
  </section>

  <!-- Brand Story Section -->
  <BrandStory />

  <!-- Testimonials Section -->
  <Testimonials />

  <!-- Newsletter Signup Section -->
  <NewsletterSignup />

  <!-- Contact Footer Section -->
  <ContactFooter />
</Layout>
